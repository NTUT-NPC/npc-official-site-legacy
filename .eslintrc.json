{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,
    "new-cap": [2, {
      "capIsNewExceptions": ["FluxMixin", "StoreWatchMixin"]
    }],
    "no-underscore-dangle": ["warn", {
      "allowAfterThis": true
    }],
    "react/no-unused-prop-types": [1, {
      "skipShapeProps": true
    }]
  },
  "globals": {
    "$": false,
    "Event": false,
    "FB": false,
    "Fluxxor": false,
    "HTMLCanvasElement": false,
    "React": false,
    "ReactDOM": false,
    "SortableMixin": false,
    "analytics": false,
    "classNames": false,
    "document": false,
    "localStorage": false,
    "moment": false,
    "navigator": false,
    "window": false
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "./app/assets/javascripts"
        ]
      }
    }
  }
}
